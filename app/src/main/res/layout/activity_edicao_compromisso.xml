<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnDataHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione a Data: "
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/displayDate" />

    <TextView
        android:id="@+id/displayDate"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnDataHora"
        android:layout_marginStart="44dp" />

    <EditText
        android:id="@+id/btndescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        android:layout_below="@+id/btnDataHora"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:id="@+id/btncontato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecione Contato "
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btndescricao"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAtt"
        android:text="Atualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncontato"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>